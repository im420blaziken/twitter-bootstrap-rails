!!!
%html{:lang => "en"}
  %head
    %title= content_for?(:title) ? yield(:title) : "<%= app_name %>"
    = csrf_meta_tags
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = stylesheet_link_tag 'application', :media => 'all'
    / For non-Retina iPhone, iPod Touch, and Android 2.1+ devices:
    / Size should be 57 x 57 pixels
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    / For first- and second-generation iPad:
    / Size should be 72 x 72 pixels
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    / For iPhone with high-resolution Retina display:
    / Size should be 114 x 114 pixels
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    / For third-generation iPad with high-resolution Retina display:
    / Size should be 144 x 144 pixels
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    / For all other devices
    / Size should be 32 x 32 pixels
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    / Javascripts
    / Placed inside head element to support turbolinks
    = javascript_include_tag 'application'
    / Responsive features in IE8. Leave this at the very end of the head tag.
    /
      NOTE: You have to uncomment config.assets.precompile in
      config/environments/production.rb and include respond.js
      E.g: config.assets.precompile += %w( respond.js )
      NOTE: If you have an IE8 specific stylesheet, include it *before* respond.js
    /[if IE 8]
      = javascript_include_tag "//html5shim.googlecode.com/svn/trunk/html5.js", asset_path('respond.js')

  %body
    .navbar.navbar-<%= layout_type %>-top
      .<%= container_class %>
        / .navbar-toggle is used as the toggle for collapsed navbar content
        %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        / Be sure to leave the brand out there if you want it shown
        %a.navbar-brand{:href => "#"} <%= app_name %>
        / Place everything within .navbar-collapse to hide it until above 768px
        .nav-collapse.collapse.navbar-responsive-collapse
          %ul.nav.navbar-nav
            %li= link_to "Link1", "/path1"
            %li= link_to "Link2", "/path2"
            %li= link_to "Link3", "/path3"
    .<%= container_class %>
      .row
        .col-lg-9
          = bootstrap_flash
          = yield
        .col-lg-3
          .well.sidebar-nav
            %h3 Sidebar
            %ul.nav.nav-list
              %li.nav-header Sidebar
              %li= link_to "Link1", "/path1"
              %li= link_to "Link2", "/path2"
              %li= link_to "Link3", "/path3"
      %footer
        .row
          .col-lg-12
            %p &copy; Company 2013
